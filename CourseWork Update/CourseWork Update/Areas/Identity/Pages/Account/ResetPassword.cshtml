@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Змінити пароль";
    ViewData["Styles"] = "/css/resetpassword.min.css";
}

<h1 class="text-center mt-4">@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="offset-4 col-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Input.Code" type="hidden" />
            <input asp-for="Input.Email" autocomplete="email" aria-required="true" placeholder="E-mail*" class="input" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
            <div class="password">
                <input asp-for="Input.Password" autocomplete="new-password" aria-required="true" placeholder="Пароль"
                       id="password"
                       class="input" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
                <img src="~/images/Login_Register/eye icon default.png"
                     alt="скрити"
                     class="eye-icon" />
            </div>
            <div class="password">
                <input asp-for="Input.ConfirmPassword" autocomplete="new-password" aria-required="true" placeholder="Повторіть пароль"
                       id="passwordconfirm"
                       class="input" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                <img src="~/images/Login_Register/eye icon default.png"
                     alt="скрити"
                     class="eye-icon-2" />
            </div>
            <input type="submit" value="ЗМІНИТИ" class="btn"/>
        </form>
    </div>
</div>

@await Html.PartialAsync("_ValidationScriptsPartial")