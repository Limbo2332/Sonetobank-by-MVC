@page
@using CourseWork_Update.Areas.Identity.Pages.Account.Manage
@model IndexModel
@{
    ViewData["Title"] = "Профіль";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="offset-md-1 col-md-10 offset-2 col-10 mt-2">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="group-input">
                <label asp-for="Username"></label>
                <input asp-for="Username" disabled class="input" />
            </div>
            <div class="group-input">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="input" type="tel" />

            </div>
            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            <input id="update-profile-button" type="submit" value="Змінити">
        </form>
    </div>
</div>

@await Html.PartialAsync("_ValidationScriptsPartial")