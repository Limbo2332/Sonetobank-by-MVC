@page
@using CourseWork_Update.Areas.Identity.Pages.Account.Manage
@model SetPasswordModel
@{
    ViewData["Title"] = "Встановити пароль";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<partial name="_StatusMessage" for="StatusMessage" />
<p class="text-info mt-2 mb-2 fw-bold" style="text-align: justify;">
    У вас немає локального паролю для цього сайту. Додайте локальний акаунт, 
    щоб ви змогли входити без використання соц. мереж.
</p>
<div class="row">
    <div class="offset-md-1 col-md-10 offset-2 col-10 mt-2">
        <form id="set-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="group-input">
                <label asp-for="Input.NewPassword"></label>
                <input asp-for="Input.NewPassword" class="input" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="group-input">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="input" aria-required="true" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <input id="change-email-button" type="submit" asp-page-handler="ChangeEmail" value="Встановити">
        </form>
    </div>
</div>

@await Html.PartialAsync("_ValidationScriptsPartial")